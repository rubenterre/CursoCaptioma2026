---

async function obtenerPersonaxe(id: string) {
  const response = await fetch(`https://dragonball-api.com/api/characters/${id}`);
  const data = await response.json();
  return data; 
}

export async function getStaticPaths() {
  const personaxes = await obtenerPersonaxe();
  return personaxes.map((personaxe) => ({
    params: { id: personaxe.id.toString() },
    props: { personaxe },
  }));
}

// Usar el personaje pasado como prop
const { personaxe } = Astro.props;
---

<h1>{personaxe.name}</h1>